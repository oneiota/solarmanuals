<%= render "layouts/header" %>

    <% if user_signed_in? %>
      <%= render 'layouts/signed_in_nav' %>
    <% end %>
    
    <div id="wrap">
      <div class="container-fluid content">
        <% if alert %>
          <div class="alert alert-error"><%= alert %></div>
        <% end %>
        <% if notice %>
          <div class="alert alert-info"><%= notice %></div>
        <% end %>
      
        <%= yield %>
        
      </div> <!-- /container -->
      
      <div id="push"></div>
      
    </div>

<%= render "layouts/footer" %>