<%= render "layouts/header" %>
    <div id="wrap">
      
      <% if user_signed_in? %>
        <div class="container">
          <%= render 'layouts/signed_in_nav' %>
        </div>
      <% end %>
      
      <div class="container content">
        <% if alert %>
          <div class="alert alert-error"><%= alert %></div>
        <% end %>
        <% if notice %>
          <div class="alert alert-info"><%= notice %></div>
        <% end %>
      
        <%= yield %>
        
      </div> <!-- /container -->
      
      <div id="push"></div>
      
    </div>

<%= render "layouts/footer" %>