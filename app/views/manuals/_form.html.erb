<hr/>
<div class="section row">
  <div class="span4">
    <h3>Safety Certificate Details</h3>
  </div>
  <div class="span5">  
    <div class="field">
      <%= f.label :contractor_licence, "Electrical Contractor Licence Number" %>
      <%= f.text_field :contractor_licence %>
    </div>
    <div class="field">
      <%= f.label :contractor_licence_name, "Name on contractor licence" %>
      <%= f.text_field :contractor_licence_name %>
    </div>
    <div class="field">
      <%= f.label :contractor_phone, "Contractor phone number" %>
      <%= f.text_field :contractor_phone %>
    </div>
