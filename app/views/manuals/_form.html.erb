    </div>
    <div class="field">
      <%= f.label :warranty_panels_product, "Panels - Product" %>
      <%= f.text_field :warranty_panels_product, :placeholder => "eg. 10 years" %>
    </div>
    <div class="field">
      <%= f.label :warranty_panels_output_performance, "Panels - Output Performance" %>
