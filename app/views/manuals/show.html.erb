<div class="row-fluid">
  <div class="span4">
    <h3>Client Details</h3>
    <p>
      Installed: <%= nicetime(@manual.install_date) %><br/>
      <strong><%= @manual.client_name %></strong><br/>
      <%= @manual.client_address %><br/>
      <%= @manual.client_suburb %><br/>
      <%= @manual.client_postcode %><br/>
      <%= @manual.client_state.name %>
    </p>
    
    <hr/>
    <% if @manual.completed? %>
      <p id="manuals-actions">
        <%= link_to '<i class="icon-download-alt"></i> Download PDF'.html_safe, manual_document_path(@manual, :format => :pdf), :class => "btn btn-primary", id: "download-pdf" %>
        <%= link_to 'Edit Details', edit_manual_path(@manual), :class => "btn", id: "edit-manual" %>
      </p>
    <% elsif @manual.unlocked? %>

      <p><%= link_to 'Continue filling details', edit_manual_path(@manual), :class => "btn btn-large btn-block btn-primary" %></p>

    <% else %>
      <p>You can unlock this manual for a fee of <strong>$5</strong>AU or <%= link_to "subscribe", root_url %> for unlimited access.</p>
      
      <%= form_for @payment do |f| %>
        <%= hidden_field_tag :manual_id, @manual.id %>
        
        <% if current_user.eway_id %>
        
          <p>Using stored credit card number <strong><%= current_user.stored_cc_number.scan(/.{4}/).join(" ").downcase %></strong></p>
          
          <p><%= link_to "Change payment details" %></p>
          
        <% else %>

          <%= render :partial => "shared/cc_fields", :locals => {f: f} %>
          
          <%= f.label :remember, :class => "checkbox" do %>
            <%= f.check_box :remember %> Remember details
          <% end %>
        
        <% end %>
        
        <%= f.submit "Pay Now", :class => "btn btn-large" %>
        
      <% end %>
      
    <% end %>
    
    <% if @manual.unlocked? %>
      
      <%= render 'pdfs_form' %>
      
      <%= render 'images' %>
      
    <% end %>
    
    
  </div>
  <div class="span7 offset1">
    <% if @manual.filled %>

      <h3>System Details</h3>

      <p>
        Output: <strong><%= @manual.system_watts %></strong> W<br/>
        System config: <strong><%= @manual.system_config %></strong><br/>
        PV Voltage: <strong><%= @manual.system_pv_voltage %></strong> Volts DC<br/>
        PV Current <strong><%= @manual.system_pv_current %></strong> Amps DC
      </p>

      <h3>Panel Details</h3>

      <p>
        Brand: <strong><%= @manual.panels_brand %></strong><br/>
        Model: <strong><%= @manual.panels_model %></strong><br/>
        Number of Panels: <strong><%= @manual.panels_number %></strong><br/>
        Serial Numbers:
      </p>
      <ol>
        <% @manual.panels_serial_numbers.split(',').each do |number| %>
          <li><strong><%= number %></strong></li>
        <% end %>
      </ol>
      <h3>Inverter Details</h3>

      <p>
        Brand: <strong><%= @manual.inverter_brand %></strong><br/>
        Model: <strong><%= @manual.inverter_model %></strong><br/>
        Output: <strong><%= @manual.inverter_output %></strong><br/>
        Serial Number: <strong><%= @manual.inverter_serial %></strong>
      </p>

      <h3>Warranty Details</h3>

      <p>
        Workmanship: <strong><%= @manual.warranty_workmanship %></strong><br/>
        Panels - Product: <strong><%= @manual.warranty_panels_product %></strong><br/>
        Panels - Output Performance: <strong><%= @manual.warranty_panels_output_performance %></strong><br/>
        Inverter: <strong><%= @manual.warranty_inverter %></strong>
      </p>
      
      <h3>Safety Certificate Details</h3>
      
      <p>
        Date of test: <strong><%= @manual.inspection_date.strftime('%e / %-m / %y') %></strong><br/>
        Electrical contractor licence number: <strong><%= @manual.contractor_licence %></strong><br/>
        Name on contractor licence: <strong><%= @manual.contractor_licence_name %></strong><br/>
        Electrical contractor phone number: <strong><%= @manual.contractor_phone %></strong><br/>
        Contractor name: <strong><%= @manual.contractor_name %></strong>
      </p>

      <h3>Graph</h3>

      <p>Using <strong><%= @manual.sunlight_city.capitalize %></strong> for sunlight data.</p>
  
    <% end %>
  </div>
</div>