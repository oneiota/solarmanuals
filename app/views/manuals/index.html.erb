<h1>Manual Archive</h1>

<table class="table table-striped">
  <tr>
    <th>Client name</th>
    <th>Client address</th>
    <th>Client suburb</th>
    <th>Install date</th>
    <th></th>
  </tr>

<% @manuals.each do |manual| %>
  <tr>
    <td><%= manual.client_name %></td>
    <td><%= manual.client_address %></td>
    <td><%= manual.client_suburb %></td>
    <td><%= nicetime(manual.install_date) %></td>
    <td class="index-controls"><%= link_to 'Show Details', manual, :class => "btn btn-small" %>
    <%= link_to 'Edit', edit_manual_path(manual), :class => "btn btn-small" %>
    <%= link_to 'Delete', manual, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>