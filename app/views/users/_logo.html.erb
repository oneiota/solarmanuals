<div id="logo-holder">
  <div id="logo-upload">
  <%= link_to "#", :id => "upload-logo-btn", class: current_user.logo? ? "gotlogo" : "nologo" do  %>
    <% if current_user.logo? %>
     <%= image_tag current_user.logo(:thumb) %>
     <span class="edit-logo">Update<br/>Logo</span>
    <% else %>
     Add<br/>Your<br/>Logo
    <% end %>  
  <% end %>
  </div>
</div>

<div id="logo-submit">
  <p class="help">Hit 'Browse' below to search your computer for your new logo file in JPG or PNG format. Please ensure your logo's file size is less than 2 megabytes.</p>
  <%= form_for current_user, :html => { :class => "logo-form" } do |f| %>
    <%= f.file_field :logo %>
    <%= f.submit "Update Logo" %>
  <% end %>
</div>  


