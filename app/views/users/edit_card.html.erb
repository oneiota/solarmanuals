<%= form_for current_user, :url => update_card_users_path, :html => { :class => "card_form" } do |f| %>
  <% if current_user.flagged && current_user.is_billable? %>
    <p>
      We will try to reprocess the last payment with the new details.<br/>
      <strong>Total:</strong> <%= currency(current_user.current_charge) %>
    </p>
  <% end %>
  <div class="nest">
    <%= render :partial => "shared/cc_fields", :locals => {f: f} %>
    <div class="actions"><%= f.submit "Update Details", :class => "btn" %></div>
  </div>
<% end %>